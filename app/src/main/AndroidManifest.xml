<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bskoskusk.imagetotex">
    <!-- Camera and Storage Permissions required -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ImageToTex">
        <activity android:name=".homeActivity" android:theme="@style/Theme.ImageToTex.NoActionBar"/>
        <activity
            android:name=".researchPaperActivity"
            android:theme="@style/Theme.ImageToTex.GreenActionBar" />
        <activity
            android:name=".simpleFileActivity"
            android:theme="@style/Theme.ImageToTex.GreenActionBar" />
        <activity
            android:name=".documentSelectionActivity"
            android:theme="@style/Theme.ImageToTex.GreenActionBar" />
        <activity
            android:name=".signUpActivity"
            android:theme="@style/Theme.ImageToTex.NewActionBar" />
        <activity
            android:name=".signInActivity"
            android:theme="@style/Theme.ImageToTex.NewActionBar" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.ImageToTex.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- add in application tag -->
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Theme.ImageToTex" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>